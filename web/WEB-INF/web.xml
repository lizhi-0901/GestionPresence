<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletConnection</servlet-name>
        <servlet-class>action.ServletConnection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/ajax/login.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletEtudiant</servlet-name>
        <servlet-class>action.ServletEtudiant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>etudiant</servlet-name>
        <jsp-file>/ajax/etudiant.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletCours</servlet-name>
        <servlet-class>action.ServletCours</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>faireappelPage</servlet-name>
        <jsp-file>/ajax/faireappel.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConnection</servlet-name>
        <url-pattern>/ServletConnection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEtudiant</servlet-name>
        <url-pattern>/ServletEtudiant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>etudiant</servlet-name>
        <url-pattern>/etudiantPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCours</servlet-name>
        <url-pattern>/ServletCours</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>faireappelPage</servlet-name>
        <url-pattern>/faireappelPage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
